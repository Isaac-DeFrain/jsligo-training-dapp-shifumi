let case_james_cannot_play = () : string => {
    // Given
    const contract = get_contract(Contract.Storage.create(alice.address, bob.address));

    // When
    Test.set_source(james);
    const material = get_play(Paper(), 0 as nat);
    const result = Test.transfer_to_contract(contract, Play(material[0]), (0 as tez));

    // Then
    Assert.assert_string_failure(result, Errors.user_not_allowed_to_play_or_reveal)
    
    return "✅";
};

